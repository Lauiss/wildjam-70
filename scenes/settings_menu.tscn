[sub_resource type="CSharpScript" id="CSharpScript_y86gd"]
script/source = "using Godot;
using System;

public partial class settings_menu : Control
{
	private Control settings;
	private Control volume;
	private Control pause;
	private Control _settingsMenu;
	
	// Called when the node enters the scene tree for the first time.
	public override void _Ready()
	{
		settings = GetNode<Control>(\"settingsScreen/default\");
		volume = GetNode<Control>(\"settingsScreen/volume\");
		pause = GetNode<Control>(\"../pauseScreen\");
		_settingsMenu = GetNode<Control>(\"settingsScreen\");
		Hide();
	}

	public override void _Process(double delta)
	{
		if(settings.Visible){
			if(Input.IsActionJustPressed(\"escape\")){
				Return();
			}
		}
	}
		
	private void Return()
	{
		// Hide visible tabs, show settings tab, or show pause and hide settings if the current tab is already settings
		if (settings.Visible)
		{
			pause.Show();
			_settingsMenu.Hide();
			settings.Hide();
			Hide();
		}
		else
		{
			volume.Hide();
			settings.Show();
		}
	}
	
	private void OpenVolumeTab()
	{
		// Show volume tab, hide all other tabs
		settings.Hide();
		volume.Show();
	}
}
